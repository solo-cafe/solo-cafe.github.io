  "devDependencies": {
    "cssnano": "^5.1.12",
    "htmlnano": "^2.0.2",
    "imagemin-cli": "^7.0.0",
    "postcss": "^8.4.14",
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.10.0",
    "posthtml-modules": "^0.9.0",
    "serve": "^13.0.2",
    "terser": "^5.14.1"
  }
